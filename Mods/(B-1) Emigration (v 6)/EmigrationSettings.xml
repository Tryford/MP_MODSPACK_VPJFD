<GameData>
	<Table name="EmigrationSettings">
		<Column name="Type" primarykey="true" type="Text" />
		<Column name="Value" type="integer" default="0"/>
	</Table>
	<EmigrationSettings>
		<!-- GENERAL RULES -->
		<Row>
			<Type>EmigrationBar</Type>
			<Value>30</Value>
		</Row>
		<Row>
			<Type>DeltaExponent</Type>
			<Value>0.5</Value>
		</Row>
		<Row>
			<Type>PoachBlock</Type>					<!-- should have x more urge on a target to poach it from another city -->
			<Value>2</Value>
		</Row>
		<Row>
			<Type>Cooldown</Type>					<!-- prevents picking same city -->
			<Value>18</Value>
		</Row>
		<Row>
			<Type>RefugeesPercent</Type>				<!-- percent of population lost on conquest escape as refugees -->
			<Value>50</Value>
		</Row>
		<!-- PROSPERITY FACTORS -->
		<Row>
			<Type>ScienceFactor</Type>
			<Value>25</Value>						<!-- only 25% of the science as its disproportional to other yields -->
		</Row>
		<Row>
			<Type>HappinessFactor</Type>
			<Value>100</Value>
 		</Row>
		<Row>
			<Type>LocalHappinessFactor</Type>
			<Value>100</Value>
		</Row>
		<Row>
			<Type>PopulationFactor</Type>
			<Value>100</Value>
		</Row>
		<Row>
			<Type>NumberOfPoliciesFactor</Type>
			<Value>0</Value>
		</Row>
		<Row>
			<Type>OrderBonus</Type>
			<Value>5</Value>
		</Row>
		<!-- PROSPERITY MODIFIERS -->
		<Row>
			<Type>FreedomModifier</Type>
			<Value>25</Value>
		</Row>
		<Row>
			<Type>ReligionModifier</Type>		<!-- more religions than one; reomved with Religious Tolerance -->
			<Value>-10</Value>					<!-- multiplied by (num religions - 1) -->
		</Row>
		<Row>
			<Type>UnemployedModifier</Type>
			<Value>-10</Value>					<!-- per unemployed -->
		</Row>
		<Row>
			<Type>WarModifier</Type>			<!-- at war with another civ or CS -->
			<Value>-10</Value>
		</Row>
		<Row>
			<Type>DangerModifier</Type>			<!-- there are enemies near the city -->
			<Value>-15</Value>
		</Row>
		<Row>
			<Type>SiegeModifier</Type>			<!-- the city is damaged, depends on damage -->
			<Value>-100</Value>
		</Row>
		<Row>
			<Type>StarvationModifier</Type>		<!-- the city is starving, depends on food storage -->
			<Value>-200</Value>
		</Row>
		<!-- EMIGRATION BARRIERS -->
		<Row>
			<Type>BaseReluctance</Type>
			<Value>5</Value>
		</Row>
		<Row>
			<Type>CityState</Type>				<!-- less emigration from city states, multiplied by era -->
			<Value>5</Value>
		</Row>
		<Row>
			<Type>PerExtraPop</Type>			<!-- destination city is bigger -->
			<Value>0.5</Value>
		</Row>
		<Row>
			<Type>RecentEmigration</Type>		<!-- for cooldown period, stacking -->
			<Value>5</Value>
		</Row>
		<Row>
			<Type>AutocracyBarrier</Type>
			<Value>10</Value>
		</Row>
	</EmigrationSettings>
</GameData>